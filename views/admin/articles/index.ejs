
<%- include ('../../partials/header.ejs') %>
<body>
    <%- include ('../../partials/navbar.ejs') %>

    <div class="container">
        <h3 class="mt-3">Artigos</h3>

        <a class="btn btn-success" href="/admin/articles/new">Criar novo artigo</a>
        <hr>
        <table class="table text-center">

            
            <thead >
                <tr>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead> 

            <tbody>
               <% articles.forEach(article =>{  %>
                <tr>

               
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= article.category.title %></td>
                <td>
                    <a href="/article/select/<%= article.id %>" class="btn btn-warning">Editar</a>
                    <form method="post" action="/admin/article/delete" onsubmit="confirmarDelecao(event,this)">
                    <input type="hidden" name="articleId" id="" value="<%= article.id %>" >
                    <button class="btn btn-danger">Deletar</button>
                 </form>
                </td>
            </tr>
               <% }) %>
            </tbody>
         
        </table>
        

        <script>
            //verifica se o usuario quer deletar
            function confirmarDelecao(event, form){
                event.preventDefault();
               var decision = confirm('Você quer deletar esse artigo ?')
               if(decision){
               form.submit();
               } else {
               
               }
            }
        </script>

    
   
       
            
           

                
        
      
       
      
       
        
